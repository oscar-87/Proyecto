extends layout
  
block content
    body(style="background:url('images/salmon.jpg')")
      center
        h2
          span.label.label-success CONFIRMAR DATOS
        div(class="row" style="margin-left:40%;")
          div(class="col-sm-4" style="margin-left:center;")
            div(class="panel panel-primary" style="margin-left:center;")
              div(class="panel-heading")
                h3(class="panel-title") Comprueba los datos y dale a confirmar si está todo correcto
              div(class="panel-body" style="background-color:#FAAC58")
                ul(class="list-group")
                  h4
                    each pedido, i in pedidos
                      li(class="list-group-item" style="background-color:#FAAC58") #{pedido.cantidad} #{pedido.nombre}
         div
           form(method='post', action="/pagina")
             button(class="btn btn-lg btn-danger" style="width:200px; height:200px;border-radius:100px; font-size:35px;border:4px;FONT-FAMILY: Verdana") Volver
           &nbsp
           form(method='post', action="/pedidoRealizado")
             button(type="submit" value="Confirmar" class="btn btn-info" style="width:200px; height:200px;border-radius:100px; font-size:35px;border:4px;FONT-FAMILY: Verdana") Confirmar

